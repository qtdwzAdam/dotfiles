map <leader>rrt :call RevertTabs()<cr>
func! RevertTabs()
    if &shiftwidth == 2
        exec "%s/  /\t/g"
    elseif &shiftwidth == 4
        exec "%s/    /\t/g"
    elseif &shiftwidth == 8
        exec "%s/    /\t/g"
    else
        exec "%s/ /\t/g"
    end
endfunc


map <leader>rt :call RemoveTabs()<cr>
func! RemoveTabs()
    if &shiftwidth == 2
        exec "%s/    /  /g"
        exec "%s/\t/  /g"
    elseif &shiftwidth == 4
        exec "%s/    /    /g"
        exec "%s/\t/    /g"
    elseif &shiftwidth == 6
        exec "%s/    /      /g"
        exec "%s/\t/      /g"
    elseif &shiftwidth == 8
        exec "%s/    /        /g"
        exec "%s/\t/        /g"
    else
        exec "%s/    / /g"
        exec "%s/\t/ /g"
    end
endfunc
